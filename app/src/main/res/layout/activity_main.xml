<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.freel.simpletraining.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рост"
        android:id="@+id/heightText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/heightEdit"
        android:inputType="number"
        android:layout_below="@+id/heightText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вес"
        android:id="@+id/weightText"
        android:layout_below="@+id/heightEdit"
        android:layout_alignLeft="@+id/heightEdit"
        android:layout_alignStart="@+id/heightEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weightEdit"
        android:inputType="number"
        android:layout_below="@+id/weightText"
        android:layout_alignLeft="@+id/weightText"
        android:layout_alignStart="@+id/weightText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Начать"
        android:id="@+id/startTrainingButton"
        android:onClick="onStartTrainingClick"
        android:layout_below="@+id/weightEdit"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
